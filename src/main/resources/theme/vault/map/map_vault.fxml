<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mapVaultRoot" xmlns="http://javafx.com/javafx/8.0.60"
           fx:controller="com.faforever.client.map.MapVaultController">
    <children>
        <VBox fx:id="loadingPane" alignment="CENTER" spacing="10.0">
            <children>
                <Label contentDisplay="TOP" text="%mapVault.loadingMaps">
                    <graphic>
                        <ProgressIndicator/>
                    </graphic>
                </Label>
            </children>
        </VBox>
        <ScrollPane fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <content>
                <VBox fx:id="contentPane" alignment="TOP_CENTER">
                    <children>
                        <VBox maxHeight="1.7976931348623157E308" spacing="10.0" styleClass="map-vault"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <HBox maxWidth="1.7976931348623157E308" spacing="10.0">
                                    <children>
                                        <TextField fx:id="searchTextField" promptText="%mapVault.searchPrompt" HBox.hgrow="ALWAYS" />
                                        <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onResetButtonClicked" styleClass="icon" text="">
                                            <padding>
                                                <Insets left="20.0" right="20.0" />
                                            </padding>
                                        </Button>
                                        <Button defaultButton="true" maxHeight="1.7976931348623157E308"
                                                mnemonicParsing="false" onAction="#onSearchMapButtonClicked"
                                                styleClass="icon" text="">
                                            <padding>
                                                <Insets left="20.0" right="20.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </padding>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onUploadMapButtonClicked" text="%mapVault.upload">
                                            <graphic>
                                                <Label styleClass="icon" text=""/>
                                            </graphic>
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#onRefreshClicked" text="%mapVault.refresh">
                                            <graphic>
                                                <Label styleClass="icon" text=""/>
                                            </graphic>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </padding>
                                </HBox>
                                <GridPane fx:id="showroomGroup">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label styleClass="h2" text="%mapVault.recommendedMap"/>
                                        <Button mnemonicParsing="false" styleClass="button-raised" text="%more"
                                                GridPane.columnIndex="1"/>
                                        <FlowPane fx:id="recommendedMapsPane" hgap="10.0"
                                                  maxWidth="1.7976931348623157E308" prefWrapLength="1500.0" vgap="10.0"
                                                  GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>
                                        <Label styleClass="h2" text="%mapVault.newestMaps" GridPane.rowIndex="2"/>
                                        <Button mnemonicParsing="false" styleClass="button-raised" text="%more"
                                                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <FlowPane fx:id="newestMapsPane" hgap="10.0" maxWidth="1.7976931348623157E308"
                                                  prefWrapLength="1500.0" vgap="10.0" GridPane.columnSpan="2147483647"
                                                  GridPane.rowIndex="3"/>
                                        <Label styleClass="h2" text="%mapVault.popularMaps" GridPane.rowIndex="4"/>
                                        <Button mnemonicParsing="false" styleClass="button-raised" text="%more"
                                                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                        <FlowPane fx:id="popularMapsPane" hgap="10.0" maxWidth="1.7976931348623157E308"
                                                  prefWrapLength="1500.0" vgap="10.0" GridPane.columnSpan="2147483647"
                                                  GridPane.rowIndex="5"/>
                                    </children>
                                </GridPane>
                                <VBox fx:id="searchResultGroup" spacing="10.0">
                                    <children>
                                        <Label styleClass="h1" text="%mapVault.searchResult"/>
                                        <FlowPane fx:id="searchResultPane" hgap="10.0" vgap="10.0" />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</StackPane>
